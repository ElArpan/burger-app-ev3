<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground"> <LinearLayout
    android:id="@+id/containerIngredient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivSelectionState"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_check_empty"
        android:layout_marginEnd="16dp"
        app:tint="@null"/> <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvIngredientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Ingrediente"
        android:textSize="16sp"
        android:textColor="#3E2723"
        android:textStyle="bold"
        android:fontFamily="@font/title_font"/>

    <TextView
        android:id="@+id/tvIngredientStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disponible"
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        android:fontFamily="@font/body_font"/>
</LinearLayout>

    <TextView
        android:id="@+id/tvQuantityBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x1"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/input_rounded"
        android:backgroundTint="@color/burgundy_900"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:visibility="gone"/>

</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        android:layout_gravity="bottom"/>

</androidx.cardview.widget.CardView>