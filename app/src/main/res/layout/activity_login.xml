<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_burgundy_gold_gradient_old">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Logo/Animaci칩n -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieWelcome"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/register_intro"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_marginBottom="20dp" />

        <!-- T칤tulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido a BurgerApp"
            android:textColor="@color/gold_light"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/poppins_bold" />

        <!-- Card de Login -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_rounded_white"
            android:padding="24dp"
            android:elevation="8dp"
            android:layout_marginBottom="20dp">

            <!-- Campos de Login -->
            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Usuario"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/input_rounded"
                android:textColor="@color/burgundy_900"
                android:textColorHint="#888888"
                android:layout_marginBottom="16dp"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins_regular"
                android:imeOptions="actionNext"
                android:maxLines="1" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Contrase침a"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/input_rounded"
                android:textColor="@color/burgundy_900"
                android:textColorHint="#888888"
                android:layout_marginBottom="16dp"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins_regular"
                android:imeOptions="actionDone" />

            <!-- Bot칩n Login -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="INICIAR SESI칍N"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="@color/gold_light"
                android:stateListAnimator="@null"
                android:elevation="4dp"
                android:fontFamily="@font/poppins_bold" />

            <!-- ProgressBar para loading -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Separador -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:alpha="0.3"
            android:layout_marginVertical="12dp" />

        <!-- Opci칩n de Registro -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쯅o tienes cuenta?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_regular" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="REGISTRARSE"
            android:textSize="16sp"
            android:textColor="@color/gold_light"
            android:textStyle="bold"
            android:background="@drawable/button_outline_gold"
            android:stateListAnimator="@null"
            android:fontFamily="@font/poppins_bold" />

        <!-- Enlace para recuperar contrase침a -->
        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쯆lvidaste tu contrase침a?"
            android:textColor="#80FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppins_regular" />

        <!-- Texto para modo invitado -->
        <TextView
            android:id="@+id/tvSkipForNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continuar como invitado"
            android:textColor="#80FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppins_regular" />

        <!-- Texto informativo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游꼢 Pedidos de hamburguesas personalizadas"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:alpha="0.8"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular" />

        <!-- Info para vecinos del condominio -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="丘멆잺 Solo para residentes del condominio"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:background="#40000000"
            android:fontFamily="@font/poppins_regular" />

    </LinearLayout>
</ScrollView>