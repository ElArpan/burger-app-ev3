<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_burgundy_gold_gradient_old"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Registro Completo"
            android:textColor="@color/gold_light"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/title_font" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos de Residente"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/burgundy_900"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/title_font" />

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Nombre y Apellido"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/input_rounded"
                    android:textColor="@color/burgundy_900"
                    android:layout_marginBottom="12dp"
                    android:drawableStart="@drawable/ic_user"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/body_font"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/input_rounded"
                    android:textColor="@color/burgundy_900"
                    android:layout_marginBottom="12dp"
                    android:drawableStart="@android:drawable/ic_dialog_email"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/body_font" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="TelÃ©fono (+569...)"
                    android:inputType="phone"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/input_rounded"
                    android:textColor="@color/burgundy_900"
                    android:layout_marginBottom="12dp"
                    android:drawableStart="@android:drawable/ic_menu_call"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/body_font" />

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="DirecciÃ³n (Block/Casa)"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/input_rounded"
                    android:textColor="@color/burgundy_900"
                    android:layout_marginBottom="12dp"
                    android:drawableStart="@android:drawable/ic_menu_compass"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/body_font" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="ContraseÃ±a (mÃ­n. 6)"
                    android:inputType="textPassword"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/input_rounded"
                    android:textColor="@color/burgundy_900"
                    android:layout_marginBottom="24dp"
                    android:drawableStart="@drawable/ic_password"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/body_font" />

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="CREAR CUENTA"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:backgroundTint="@color/burgundy_700"
                    android:stateListAnimator="@null"
                    android:elevation="0dp"
                    android:fontFamily="@font/title_font"
                    app:cornerRadius="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš ï¸ Solo para residentes del condominio"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:background="#30000000"
            android:fontFamily="@font/body_font" />

        <TextView
            android:id="@+id/tvGoToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¿Ya tienes cuenta? Inicia sesiÃ³n"
            android:textColor="@color/gold_light"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:fontFamily="@font/body_font" />

    </LinearLayout>
</ScrollView>