<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5">

    <!-- Bienvenida -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido, Cliente"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp" />

    <!-- Bot贸n Construir Hamburguesa -->
    <Button
        android:id="@+id/btnBuildBurger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Construir Hamburguesa"
        android:textSize="18sp"
        android:padding="20dp"
        android:backgroundTint="#FF5722"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <!-- Bot贸n Historial de Pedidos -->
    <Button
        android:id="@+id/btnOrderHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Historial de Pedidos"
        android:textSize="18sp"
        android:padding="20dp"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <!-- Bot贸n Subir Comprobante -->
    <Button
        android:id="@+id/btnDeposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Subir Comprobante"
        android:textSize="18sp"
        android:padding="20dp"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <!-- Bot贸n Cerrar Sesi贸n -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Cerrar Sesi贸n"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="#9E9E9E"
        android:textColor="@android:color/white" />

</LinearLayout>