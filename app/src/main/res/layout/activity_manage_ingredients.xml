<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_burgundy_gold_gradient_old">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tvManageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GestiÃ³n de Inventario"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/title_font"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="@color/gold_light"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="-20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="80dp"> <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvIngredients"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:clipToPadding="false"/>

                <TextView
                    android:id="@+id/tvEmpty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No hay ingredientes registrados"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textColor="#9E9E9E"
                    android:fontFamily="@font/body_font"
                    android:visibility="gone"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddIngredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add"
        app:tint="@color/burgundy_900"
        app:backgroundTint="@color/gold_500"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        app:elevation="12dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>