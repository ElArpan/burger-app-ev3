<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp">

    <!-- Top bar with Lottie + title -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Lottie animation (welcome banner) -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieWelcome"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:lottie_rawRes="@raw/loading_anim"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="ðŸ” Construye tu hamburguesa"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/burgundy_900" />
    </LinearLayout>

    <!-- Contenedor principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Card: Tipo de carne -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ– Tipo de carne"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/burgundy_900"/>

                    <RadioGroup
                        android:id="@+id/rgMeatType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <RadioButton
                            android:id="@+id/rbTraditional"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tradicional"
                            android:checked="true"
                            android:fontFamily="@font/poppins_regular"/>

                        <RadioButton
                            android:id="@+id/rbBarbecue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Barbecue"
                            android:fontFamily="@font/poppins_regular"/>
                    </RadioGroup>

                    <!-- Double patty checkbox (opcional) -->
                    <CheckBox
                        android:id="@+id/cbDoublePatty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doble hamburguesa (opcional) - $1200"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/burgundy_700"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Ingredientes -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selecciona ingredientes extra"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/burgundy_900"/>

                    <ListView
                        android:id="@+id/lvIngredients"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:choiceMode="multipleChoice"
                        android:divider="@android:color/darker_gray"
                        android:dividerHeight="1dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Resumen y envÃ­o -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Resumen"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/burgundy_900"/>

                        <TextView
                            android:id="@+id/tvSelectedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ingredientes: 0"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/muted_text"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total: $2000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/gold_700"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:id="@+id/btnCreateBurger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ Ver resumen y enviar pedido"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="@color/burgundy_700"
                        android:textColor="@color/surface"
                        android:fontFamily="@font/poppins_bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Footer Lottie small -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="18dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieAccessGift"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    app:lottie_rawRes="@raw/loading_anim"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="24dp" />
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>