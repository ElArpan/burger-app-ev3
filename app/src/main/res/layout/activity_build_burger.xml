<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_burgundy_gold_gradient_old">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DiseÃ±a tu Sabor"
            android:textColor="@color/gold_light"
            android:textSize="28sp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/title_font"
            android:layout_marginBottom="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elige el estilo de tu carne:"
                    android:textSize="16sp"
                    android:textColor="#3E2723"
                    android:fontFamily="@font/body_font"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/rgMeatType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <RadioButton
                        android:id="@+id/rbTraditional"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tradicional"
                        android:textColor="#3E2723"
                        android:buttonTint="@color/burgundy_900"
                        android:checked="true"
                        android:fontFamily="@font/body_font"/>

                    <RadioButton
                        android:id="@+id/rbBarbecue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="BBQ"
                        android:textColor="#3E2723"
                        android:buttonTint="@color/burgundy_900"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/body_font"/>

                    <RadioButton
                        android:id="@+id/rbSpicy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Picante ðŸ”¥"
                        android:textColor="#D32F2F"
                        android:textStyle="bold"
                        android:buttonTint="@color/burgundy_900"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/body_font"/>
                </RadioGroup>

                <CheckBox
                    android:id="@+id/cbDoublePatty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Doble Carne (+$1.200)\nÂ¡Incluye 3 ingredientes gratis!"
                    android:textColor="#3E2723"
                    android:buttonTint="@color/burgundy_900"
                    android:fontFamily="@font/body_font"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginVertical="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona tus ingredientes:"
                    android:textStyle="bold"
                    android:textColor="#5D4037"
                    android:fontFamily="@font/body_font"
                    android:layout_marginBottom="8dp"/>

                <ListView
                    android:id="@+id/lvIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:scrollbars="vertical"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F0F0F0"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¨â€ðŸ³ Mensaje para el Chef (Opcional)"
                android:textStyle="bold"
                android:textColor="#333333"
                android:fontFamily="@font/body_font"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etChefNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: Bien cocida, sin sal, extra cariÃ±o..."
                android:textSize="14sp"
                android:background="@android:color/white"
                android:padding="10dp"
                android:textColor="#000000"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="3"
                android:minLines="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: $2500"
                android:textColor="@color/gold_light"
                android:textSize="24sp"
                android:gravity="end"
                android:fontFamily="@font/title_font"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnCreateBurger"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="CONTINUAR A SALSAS âžœ"
                android:backgroundTint="@color/gold_500"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:cornerRadius="12dp"
                android:fontFamily="@font/title_font"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>