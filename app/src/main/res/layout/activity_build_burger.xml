<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_burgundy_gold_gradient_old">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DiseÃ±a tu Sabor"
            android:textColor="@color/gold_light"
            android:textSize="28sp"
            android:gravity="center"
            android:fontFamily="@font/title_font"
            android:layout_marginBottom="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¿Quieres tu hamburguesa a la parrilla con salsa?"
                    android:textSize="16sp"
                    android:textColor="@color/burgundy_900"
                    android:fontFamily="@font/body_font"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/rgMeatType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <RadioButton
                        android:id="@+id/rbTraditional"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tradicional"
                        android:checked="true"
                        android:fontFamily="@font/body_font"/>

                    <RadioButton
                        android:id="@+id/rbBarbecue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BBQ"
                        android:layout_marginStart="12dp"
                        android:fontFamily="@font/body_font"/>

                    <RadioButton
                        android:id="@+id/rbSpicy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Picante ðŸ”¥"
                        android:layout_marginStart="12dp"
                        android:fontFamily="@font/body_font"/>
                </RadioGroup>

                <CheckBox
                    android:id="@+id/cbDoublePatty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Doble Hamburguesa (+$1200) - Â¡Incluye 3 ingredientes gratis!"
                    android:textColor="#333"
                    android:fontFamily="@font/body_font"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEE"
                    android:layout_marginVertical="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona tus ingredientes"
                    android:textStyle="bold"
                    android:fontFamily="@font/body_font"
                    android:layout_marginBottom="8dp"/>

                <ListView
                    android:id="@+id/lvIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:dividerHeight="1dp"
                    android:divider="#F0F0F0"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: $2000"
                android:textColor="@color/gold_light"
                android:textSize="24sp"
                android:gravity="end"
                android:fontFamily="@font/title_font"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnCreateBurger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar Salsas y Continuar âžœ"
                android:backgroundTint="@color/gold_500"
                android:textColor="@color/burgundy_900"
                android:padding="16dp"
                android:fontFamily="@font/title_font"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>