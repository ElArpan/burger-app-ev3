<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ” Construir Tu Hamburguesa"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp" />

    <!-- Tipo de Carne -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ– Tipo de Carne:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <RadioGroup
            android:id="@+id/rgMeatType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbTraditional"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tradicional"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbBarbecue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Barbecue" />

        </RadioGroup>

    </LinearLayout>

    <!-- InformaciÃ³n de Precios -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E8F5E8"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tvBasePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base: $2000 (Pan + Doble Hamburguesa Tradicional)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2E7D32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’° Precios: 1-3 ingredientes: $300 c/u | 4+ ingredientes: $500 c/u"
            android:textSize="12sp"
            android:textColor="#1B5E20"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona ingredientes extra:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <ListView
        android:id="@+id/lvIngredients"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:divider="#E0E0E0"
        android:dividerHeight="1dp" />

    <!-- Panel de Resumen y AcciÃ³n -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Resumen:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSelectedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredientes: 0"
                android:textSize="14sp"
                android:textColor="#666" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: $2000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnCreateBurger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ Ver Resumen y Enviar Pedido"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>