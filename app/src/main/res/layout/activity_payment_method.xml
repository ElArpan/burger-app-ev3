<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_burgundy_gold_gradient_old"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finalizar Pedido"
            android:textColor="@color/gold_light"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/title_font"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total a Pagar: $0"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:fontFamily="@font/body_font"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:shadowColor="#40000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona mÃ©todo de pago:"
            android:textColor="#E0E0E0"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/body_font"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <RadioButton
                        android:id="@+id/rbCash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’µ Efectivo / Contra entrega"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/burgundy_900"
                        android:buttonTint="@color/burgundy_700"
                        android:fontFamily="@font/title_font"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCashInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="12dp"
                    android:paddingStart="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Â¿Con cuÃ¡nto vas a pagar?"
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:fontFamily="@font/body_font"/>

                    <EditText
                        android:id="@+id/etCashAmount"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Ej: 10000"
                        android:inputType="number"
                        android:background="@drawable/input_rounded"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/body_font"/>

                    <TextView
                        android:id="@+id/tvChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vuelto necesario: $0"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/title_font"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTransfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="8dp"
            android:layout_marginBottom="30dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <RadioButton
                    android:id="@+id/rbTransfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“± Transferencia Bancaria"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/burgundy_900"
                    android:buttonTint="@color/burgundy_700"
                    android:fontFamily="@font/title_font"/>

                <LinearLayout
                    android:id="@+id/llTransferDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/input_rounded"
                    android:backgroundTint="#FFF8E1"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Datos para transferir:"
                        android:textStyle="bold"
                        android:textColor="@color/gold_dark"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/title_font"/>

                    <TextView
                        android:id="@+id/tvHolderName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Titular: Byron Carrasco"
                        android:textColor="#3E2723"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/body_font"/>

                    <TextView
                        android:id="@+id/tvBankName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Banco: Estado"
                        android:textColor="#3E2723"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/body_font"/>

                    <TextView
                        android:id="@+id/tvAccountType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tipo: Cuenta RUT"
                        android:textColor="#3E2723"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/body_font"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D7CCC8"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:id="@+id/layoutCopyRut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="RUT: 17.807.475-k"
                            android:id="@+id/tvRutData"
                            android:textColor="#3E2723"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:fontFamily="@font/body_font"/>

                        <ImageView
                            android:id="@+id/btnCopyRut"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@android:drawable/ic_menu_save"
                            app:tint="@color/gold_700"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutCopyAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="NÂ° Cuenta: 0017807475"
                            android:id="@+id/tvAccountData"
                            android:textColor="#3E2723"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:fontFamily="@font/body_font"/>

                        <ImageView
                            android:id="@+id/btnCopyAccount"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@android:drawable/ic_menu_save"
                            app:tint="@color/gold_700"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘† Toca para copiar"
                        android:textSize="11sp"
                        android:textColor="#8D6E63"
                        android:gravity="end"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnConfirmPayment"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="CONTINUAR"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/gold_500"
            app:cornerRadius="12dp"
            android:fontFamily="@font/title_font"
            android:enabled="false"/>

    </LinearLayout>
</ScrollView>